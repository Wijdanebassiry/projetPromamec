@page
@model projetPromamec.Pages.FicheProjet.CreateModel
@{
    ViewData["Title"] = "Liste des Fiches Projets";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle Fiche
        </a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>N° Projet</th>
                <th>Client</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Projects)
            {
                <tr>
                    <td>@item.ProjectNumber</td>
                    <td>@item.ClientName</td>
                    <td>@item.ProjectDate.ToShortDateString()</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-page="./Print" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" target="_blank">
                            <i class="fas fa-print"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>